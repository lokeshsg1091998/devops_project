[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/cicd/workspace/devops_pipeline
ExecStart=/home/ubuntu/cicd/workspace/devops_pipeline/env/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/gunicorn.sock \
          devopssec.wsgi:application

[Install]
WantedBy=multi-user.target